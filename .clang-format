---
# Base style â€“ closest to our preferences, then overrides below.
BasedOnStyle:  LLVM

# Indentation
IndentWidth:             4
ContinuationIndentWidth: 4
TabWidth:                4
UseTab:                  Never

# Line length  (match Ruff / Black default)
ColumnLimit: 88

# Braces
BreakBeforeBraces: Attach      # K&R style: int foo() {
InsertBraces:      true        # always add braces around single-stmt bodies

# Spaces
SpaceBeforeParens:              ControlStatements
SpaceInEmptyBlock:              false
SpacesInAngles:                 Never
SpacesInParens:                 Never

# Pointers / references: int *p, not int* p
PointerAlignment: Right

# Include ordering (mirrors isort sections)
SortIncludes:         CaseSensitive
IncludeBlocks:        Regroup
IncludeCategories:
  # 1. Main header (file.h for file.c)
  - Regex:           '^"[^/]+'
    Priority:        1
  # 2. Project headers
  - Regex:           '^"'
    Priority:        2
  # 3. System / libc headers
  - Regex:           "^<"
    Priority:        3

# Alignment
AlignConsecutiveAssignments:   Consecutive
AlignConsecutiveDeclarations:  None
AlignTrailingComments:
  Kind:            Always
  OverEmptyLines:  1

# Misc
AllowShortFunctionsOnASingleLine: None
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false
MaxEmptyLinesToKeep: 1
...
